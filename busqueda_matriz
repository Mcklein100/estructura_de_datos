#include <iostream>
#include <conio.h>
using namespace std;

void imprimirMatriz(int **matriz, int filas, int columnas) {
	for (int i = 0; i < filas; ++i) {
		for (int j = 0; j < columnas; ++j) {
			cout << matriz[i][j] << " ";
		}
		cout << endl;
	}
}

void buscarDato(int **matriz, int filas, int columnas, int dato) {
	bool encontrado = false;
	for (int i = 0; i < filas; ++i) {
		for (int j = 0; j < columnas; ++j) {
			if (matriz[i][j] == dato) {
				cout << "El dato " << dato << " se encuentra en la posición (" << i << ", " << j << ")" << endl;
				encontrado = true;
			}
		}
	}
	if (!encontrado) {
		cout << "El dato " << dato << " no se encontró en la matriz." << endl;
	}
}

int main() {
	int filas, columnas;
	
	cout << "Ingrese el número de filas de la matriz: ";
	cin >> filas;
	cout << "Ingrese el número de columnas de la matriz: ";
	cin >> columnas;
	
	// Crear la matriz dinámica
	int **matriz = new int *[filas];
	for (int i = 0; i < filas; ++i) {
		matriz[i] = new int[columnas];
	}
	
	cout << "Ingrese los elementos de la matriz:" << endl;
	for (int i = 0; i < filas; ++i) {
		for (int j = 0; j < columnas; ++j) {
			cout << "Ingrese el elemento en la posición (" << i << ", " << j << "): ";
			cin >> matriz[i][j];
		}
	}
	
	cout << "Matriz ingresada:" << endl;
	imprimirMatriz(matriz, filas, columnas);
	
	int datoBuscado;
	cout << "Ingrese el dato que desea buscar: ";
	cin >> datoBuscado;
	
	buscarDato(matriz, filas, columnas, datoBuscado);
	
	// Liberar la memoria de la matriz
	
	getch ();
	return 0;
}

